# Exemplo de arquivo de variáveis
# Copie este arquivo para terraform.tfvars e ajuste os valores conforme necessário
# ⚠️ NÃO commite o arquivo terraform.tfvars com valores reais

aws_region = "us-east-1"

project_name = "eks-challenge"

environment = "dev"

vpc_cidr = "10.0.0.0/16"

availability_zones = ["us-east-1a", "us-east-1b"]

eks_cluster_version = "1.28"

eks_node_instance_types = ["t3.medium"]

eks_node_desired_size = 2

eks_node_min_size = 1

eks_node_max_size = 3

# Tags adicionais (opcional)
tags = {
  ManagedBy = "Terraform"
  Project   = "EKS-Challenge"
  Owner     = "DevOps Team"
}

